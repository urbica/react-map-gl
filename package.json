{
  "name": "@urbica/react-map-gl",
  "version": "0.6.0-beta.14",
  "description": "React Component for Mapbox GL JS",
  "author": "Stepan Kuzmin <to.stepan.kuzmin@gmail.com> (stepankuzmin.ru)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/urbica/react-map-gl.git"
  },
  "main": "dist/react-map-gl.cjs.js",
  "module": "dist/react-map-gl.esm.js",
  "files": [
    "dist",
    "flow-typed"
  ],
  "scripts": {
    "start": "npm run styleguide",
    "lint": "eslint src test",
    "typecheck": "flow check src",
    "typecheck:coverage": "flow-coverage-report -i 'src/**/*.js' -t html",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov",
    "build": "rollup -c",
    "docs": "documentation build src/index.js -f md -o docs/props.md",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "styleguide:deploy": "gh-pages -m 'auto commit [ci skip]' -d styleguide",
    "format": "prettier-eslint --write \"src/**/*.js\"",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "release": "npm run build && standard-version",
    "prepublishOnly": "npm run build",
    "postpublish": "npm run docs && npm run styleguide:build && npm run styleguide:deploy"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "jest --findRelatedTests",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@turf/helpers": "^6.1.4",
    "create-react-context": "^0.2.2",
    "supercluster": "^3.0.3"
  },
  "peerDependencies": {
    "immutable": "4.x",
    "mapbox-gl": ">= 0.40.0 < 1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@turf/random": "^6.0.2",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "codecov": "^3.0.4",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "documentation": "^8.1.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.78.0",
    "flow-coverage-report": "^0.5.0",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "immutable": "^4.0.0-rc.9",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "mapbox-gl": "^0.47.0",
    "prettier": "^1.14.2",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "react": "^16.4.2",
    "react-docgen": "^2.21.0",
    "react-dom": "^16.4.2",
    "react-styleguidist": "^7.2.1",
    "react-test-renderer": "^16.4.2",
    "rollup": "^0.64.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-node-resolve": "^3.3.0",
    "standard-version": "^4.4.0",
    "webpack": "^4.16.5"
  }
}
