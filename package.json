{
  "name": "@urbica/react-map-gl",
  "version": "0.6.0-beta.18",
  "description": "React Component for Mapbox GL JS",
  "author": "Stepan Kuzmin <to.stepan.kuzmin@gmail.com> (stepankuzmin.ru)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/urbica/react-map-gl.git"
  },
  "main": "dist/react-map-gl.cjs.js",
  "module": "dist/react-map-gl.esm.js",
  "files": [
    "dist",
    "flow-typed"
  ],
  "scripts": {
    "start": "npm run styleguide",
    "lint": "eslint src test",
    "flow": "flow check",
    "flow:coverage": "flow-coverage-report -i 'src/**/*.js' -t html",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov",
    "build": "rollup -c",
    "docs": "documentation build src/index.js -f md -o docs/props.md",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "styleguide:deploy": "gh-pages -m 'auto commit [ci skip]' -d styleguide",
    "format": "prettier-eslint --write \"src/**/*.js\"",
    "cz": "git-cz",
    "release": "npm run build && standard-version",
    "prepublishOnly": "npm run build",
    "postpublish": "npm run docs && npm run styleguide:build && npm run styleguide:deploy"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "jest --findRelatedTests",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "immutable": "4.x",
    "mapbox-gl": ">= 0.40.0 < 1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "supercluster": "^4.1.1"
  },
  "dependencies": {
    "create-react-context": "^0.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@turf/random": "^6.0.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-preset-es2015-rollup": "^3.0.0",
    "codecov": "^3.1.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "documentation": "^9.1.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.89.0",
    "flow-coverage-report": "^0.6.1",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.0",
    "immutable": "^4.0.0-rc.12",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "mapbox-gl": "^0.51.0",
    "prettier": "^1.15.3",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "react": "^16.7.0",
    "react-docgen": "^2.21.0",
    "react-dom": "^16.7.0",
    "react-styleguidist": "^8.0.6",
    "react-test-renderer": "^16.7.0",
    "rollup": "^1.0.0",
    "rollup-plugin-babel": "^4.1.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^1.0.1",
    "standard-version": "^4.4.0",
    "webpack": "^4.28.2"
  }
}
